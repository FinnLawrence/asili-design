.full-screen-nav-wrapper {
  position: fixed;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  transition: all $navbar-animation-speed;

  .nav-links {
    list-style-type: none;
    padding: 0px;
    margin: 0px;
  }

  .nav-links-center {
    text-align: center;
    z-index: 12;

    .nav-link-image-wrapper {
      position: absolute;
      z-index: -1;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background-size: cover;
      background-repeat: no-repeat;
      transition: all $navbar-animation-speed;
      opacity: 0;

      img {
        display: none;
      }
    }
    
    .nav-link-image-wrapper.nav-list-image-wrapper {
      background: white;
      z-index: -3;
    }

    >li {
      a {
        text-transform: lowercase;
        font-family: UntitledSansBlack, sans-serif;
        font-size: 6.25vw;
        line-height: 6.25vw;
        font-weight: bold;
        color: black;
        transition: all $navbar-animation-speed;
      }

      a:hover, a:focus {
        text-decoration: none;
      }
    }

    >li:hover {
      a {
        color: white;
      }

      .nav-link-image-wrapper {
        opacity: 1;
      }
    }

    >li.active {
      .nav-link-image-wrapper {
        z-index: -2;
        opacity: 1;
      }
    }
  }
  
  .nav-links-center:hover {
    .nav-link-image-wrapper.nav-list-image-wrapper {
      opacity: 1;
    }
  }

  .nav-links-bottom {
    /* TODO Remove display:none */
    display: none;
    position: absolute;
    width: 100%;
    bottom: 0px;
    left: 0px;
  }
}

.full-screen-nav-wrapper.hidden {
  display: flex !important;
  opacity: 0;
  visibility: hidden;
}

// Grid & layout

section.nav-padded {
  margin-top: calc(14vh + 3.5vw);
}

section.full-width {
  width: 100%;
}

section.full-height {
  min-height: 100vh;
}

.video-wrapper {
  overflow: hidden;

  video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
  }
}

.video-wrapper.full-width {
  width: 100%;
}

.video-wrapper.full-height {
  height: 100vh;
}
