  opacity: 0;
  transition: opacity $general-animation-speed;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%;

  img {
    display: none;
  }
}

.square:before {
  content: '';
  display: block;
  padding-top: 100%;
}

