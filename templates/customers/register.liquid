<section class="full-width full-height nav-padded asili-light-bg">
  <div class="customer-wrapper">

    <!-- Create Customer Form -->
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <h1>Register New Account</h1>
        <hr />

        {% form 'create_customer' %}

        <!-- Display any creation errors. -->
        {% if form.errors %}
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title">Could not create account.</h3>
          </div>
          <div class="panel-body">
            <ul>
              {% for field in form.errors %}
              <li>The {{ field | capitalize }} field {{ form.errors.messages[field] }}.</li>
              {% endfor %}
            </ul>
          </div>      
        </div>
        {% endif %}

        <!-- Name -->
        <div class="form-group form-group-text">
          <label for="customer[first_name]">Name</label>
          <input type="text" class="form-control" id="customer[first_name]" name="customer[first_name]" value="{{form.first_name}}" placeholder="First" />
          <input type="text" class="form-control" id="customer[last_name]" name="customer[last_name]" value="{{form.last_name}}" placeholder="Last" />
        </div>

        <!-- Email -->
        <div class="form-group form-group-text">
          <label for="customer[email]">Email</label>
          <input type="text" class="form-control" id="customer[email]" name="customer[email]" value="{{form.email}}" />
        </div>

        <!-- Password -->
        <div class="form-group form-group-text">
          <label for="customer[password]">Set Password</label>
          <input type="password" class="form-control" id="customer[password]" name="customer[password]" />
        </div>

        <!-- Register Button -->
        <div class="form-group right-align">
          <button type="submit" class="btn btn-lg btn-primary">Submit</button>
        </div>

        <hr />        
        <p class="text-center bold">
          {{ 'Return to Login' | customer_login_link }}
        </p>
        {% endform %}
      </div>
    </div>
  </div>
</section>