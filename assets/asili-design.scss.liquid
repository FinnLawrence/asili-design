// Colour definitions


// Variables
$navbar-item-height: 3.5vw;
$navbar-item-min-height: 40px;

$navbar-animation-speed: 0.3s;

// Shopify

.shopify-preview-bar {
  display: none;
}

// Navigation
nav.navbar-default {
  background-color: transparent;
  border: 0px;
  box-shadow: none;
  position: fixed;
  z-index: 5;
  top: 0px;
  left: 0px;
  width: 100%;
}

.navbar-header {
  width: 100%;
  padding: 7vh 4.5vw;

  .navbar-brand {
    padding: 0px;
    min-height: $navbar-item-min-height;
    height: $navbar-item-height;

    img {
      min-height: $navbar-item-min-height;
      height: $navbar-item-height;
    }
  }

  .navbar-toggle-wrapper {
    z-index: 12;
    position: relative;
    float: right;
    display: flex;
    align-items: center;
    min-height: $navbar-item-min-height;
    height: $navbar-item-height;

    .navbar-toggle {
      margin: 0px;
      border: 0px;
      padding: 12px 2px;

      @media(min-width: 768px) {
        display: inline-block !important;
      }

      .icon-bar {
        width: 32px;
        transition: all $navbar-animation-speed;
      }

      .icon-bar+.icon-bar {
        margin-top: 8px;
      }
    }

    .navbar-toggle.active {
      .icon-bar:first-child {
        transform: rotate(45deg) translate(3px, 3px);
      }

      .icon-bar:last-child {
        transform: rotate(-45deg) translate(4px, -4px);
      }
    }

    .navbar-toggle:hover, .navbar-toggle:focus {
      background-color: transparent;
    }
  }
}



