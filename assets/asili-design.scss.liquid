.full-screen-nav-wrapper {
  position: fixed;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  transition: all $navbar-animation-speed;

  .nav-links {
    list-style-type: none;
    padding: 0px;
    margin: 0px;
  }

  .nav-links-center {
    text-align: center;
    z-index: 12;

    .nav-link-image-wrapper {
      position: absolute;
      z-index: -1;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background-size: cover;
      background-repeat: no-repeat;
      transition: all $navbar-animation-speed;
      opacity: 0;

      img {
        display: none;
      }
    }

    .nav-link-image-wrapper.nav-list-image-wrapper {
      background: white;
      z-index: -3;
    }

    >li {
      a {
        text-transform: lowercase;
        font-family: UntitledSansBlack, sans-serif;
        font-size: 40px;
        line-height: 40px;
        font-weight: bold;
        color: $color-asili-dark;
        transition: all $navbar-animation-speed;

        @media(min-width: 768px) {
          font-size: 6.25vw;
          line-height: 6.25vw;
        }
      }

      a:hover, a:focus {
        text-decoration: none;
      }
    }

    >li:hover {
      a {
        color: $color-asili-light;
      }

      .nav-link-image-wrapper {
        opacity: 1;
      }
    }

    >li.active {
      .nav-link-image-wrapper {
        z-index: -2;
        opacity: 1;
      }
    }
  }

  .nav-links-center:hover {
    .nav-link-image-wrapper.nav-list-image-wrapper {
      opacity: 1;
    }
  }

  .nav-links-bottom {
    /* TODO Remove display:none */
    display: none;
    position: absolute;
    width: 100%;
    bottom: 0px;
    left: 0px;
  }
}

.full-screen-nav-wrapper.hidden {
  display: flex !important;
  opacity: 0;
  visibility: hidden;
}

// Font & Typography
html, body, h1, h2, h3, h4, h5, h6 {
  font-family: Proxima-Nova, sans-serif;
}

// Blog

.blog-wrapper {
  margin: 0px 5%;
  padding: 30px 0px;

  .blog-section {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -30px;

    .blog-preview, .blog-image {
      padding: 0px 5%;
      
      @media(min-width: 768px) {
        width: 50%;
      }
    }

    .blog-image {
      
      img {
        width: 100%;
      }
    }
    
    .blog-preview {
      a:hover, a:focus {
        text-decoration: none;
      }
      
      p {
        font-size: 16px;
        font-weight: 600;
      }
      
      .blog-title {
        font-weight: bold;
        color: $color-asili-dark;
        font-size: 40px;
        margin-bottom: 60px;
      }
    }
  }
  
  .blog-section:nth-child(even) {
    @media(min-width: 768px) {
      flex-direction: row-reverse;
    }
  }
}

// Grid & layout

#content {
  overflow: hidden;
}

body {
  .asili-grid-content .content-wrapper {
    color: $color-asili-dark;
  }

  .navbar-default .navbar-toggle .icon-bar {
    background-color: $color-asili-dark;
  }
}

body.dark {
  .asili-grid-content .content-wrapper {
    color: $color-asili-light;
  }

  .navbar-default .navbar-toggle .icon-bar {
    background-color: $color-asili-light;
  }
}

body.nav-open {
  .brand-wrapper {
    opacity: 0;
  }
}

section.nav-padded {
  margin-top: calc(14vh + 3.5vw);
}

section.full-width {
  width: 100%;
}

section.full-height {
  min-height: 100vh;
}

section.full-width.full-height {
  position: relative;
}

.brand-wrapper {
  position: absolute;
  z-index: 1;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all $navbar-animation-speed;

  .brand-content {
    width: 250px;
    text-align: center;

    @media(min-width: 768px) {
      width: auto;
      display: flex;
      align-items: center;
      justify-content: space-around;
    }

    img {
      width: 100%;
      padding: 20px 50px;
      @media(min-width: 768px) {
        width: 20vw;
        padding: 0px 20px;
      }
    }

    .brand-text {
      color: $color-asili-light;
      font-weight: bold;
      font-size: 16px;
      margin: 0px 20px;
      @media(min-width: 768px) {
        font-size: 2.5vw;
        line-height: 110%;
      }
    }
  }
}

.video-wrapper {
  overflow: hidden;

  video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
  }
}

.video-wrapper.full-width {
  width: 100%;
}

.video-wrapper.full-height {
  height: 100vh;
}

.asili-grid-wrapper {
  @media(min-width: 768px) {
    display: flex;
  }

  .asili-grid-half {
    width: 100%;
    min-height: 50vh;

    @media(min-width: 768px) {
      width: 50%;
      min-height: 100vh;
    }
  }

  .asili-grid-image-background {
    background-size: cover;
    background-repeat: no-repeat;

    img {
      display: none;
    }
  }

  .asili-grid-content {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px 5%;

    h1, h2, h3, h4, h5, h6 {
      text-transform: lowercase;
      font-weight: bold;
      margin: 0px;
      margin-bottom: 6vh;

      @media(min-width: 768px) {
        font-size: 2.6vw;
        line-height: 115%;
      }
    }

    p {
      font-weight: 600;
      font-size: 13px;

      @media(min-width: 768px) {
        max-width: 25vw;
      }
    }
  }

  .asili-grid-content:last-child {
    /* Right hand side of the page */

    @media(min-width: 768px) {
      padding: 0px;
      padding-left: 10vw;

      .content-wrapper {
        margin-top: 20vh;
        margin-bottom: 5vh;
        margin-right: 15vw;
      }
    }
  }
}
