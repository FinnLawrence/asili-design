  }

  .form-group {
    margin-bottom: 18px;

    label {
      font-weight: 600;
      white-space: nowrap;
    }

    input, textarea, select {
      color: $color-asili-dark;
    }

    .form-control {
      background-color: transparent;
    }
  }

  .form-group.form-group-text {
    display: flex;
    align-items: center;

    label {
      color: $color-asili-dark;
      padding-right: 10px;
    }

    input {
      height: $form-input-height; 
    }

    input+input {
      margin-left: 15px;
    }

    input, textarea, select {
      box-shadow: none;
      border: 0px;
      border-radius: 0px;
      padding: 3px 2px;
      border-bottom: 1px solid $color-asili-dark;
    }

    .btn {
      margin-left: 15px;
      padding-top: 3px;
      padding-bottom: 3px;

      .glyphicon-search {
        font-size: 75%;
      }
    }
  }

  .form-group.form-group-text.form-group-textarea {
    flex-wrap: wrap;

    label {
      width: 100%;
    }
  }

  .form-group.form-group-text.form-group-select {
    position: relative;

    select {
      -webkit-appearance: none;
      -webkit-border-radius: 0px;
    }
  }

  .form-group.form-group-text.form-group-select:before {
    content: "\25bc";
    position: absolute;
    top: 12px;
    right: 3px;
    font-size: 10px;
  }

  .form-group.form-group-radio {

    label {
      color: $color-asili-dark;
    }

    .radio-label {
      height: $form-input-height;
      line-height: $form-input-height;
    }

    .radio+.radio {
      margin-top: 0px;
    }

    .radio {
      position: relative;
      display: inline-block;
      height: $form-input-height;
      margin: 0px;

      input[type="radio"] {
        margin: 0px;
        opacity: 0;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
      }

      label {
        position: relative;
        margin-left: 10px;
        color: $color-asili-dark-disabled;
        padding: 0px;
        height: $form-input-height;
        line-height: $form-input-height;
        transition: color 0.3s;
      }

      label:after {
        content: "";
        position: absolute;
        top: 0px;
        left: 50%;
        width: 0px;
        height: $form-input-height;
        border-bottom: 1px solid $color-asili-dark;
        transition: width 0.3s;
        @include transform(translateX(-50%));
      }

      input[type="radio"]:checked+label { 
        color: $color-asili-dark;
      }

      input[type="radio"]:checked+label:after { 
        width: 100%;
      }
    }
  }

  .form-group.form-group-stacked {
    flex-wrap: wrap;

    input {
      margin-top: 10px;
    }

    input+input {
      margin-left: 0px
    }
  }
}

