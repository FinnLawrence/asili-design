// ##################
// Colour definitions
// ##################

$color-asili-dark: #312E35;
$color-asili-dark-hover: #646168;
$color-asili-light: #FCF7EA;

// #########
// Variables
// #########

$navbar-item-height: 3.5vw;
$navbar-item-min-height: 40px;

$navbar-animation-speed: 0.3s;
$general-animation-speed: 0.5s;

// #######
// Shopify
// #######

.shopify-preview-bar {
  display: none;
}

// ##########
// Navigation
// ##########

nav.navbar-default {
  background-color: transparent;
  border: 0px;
  box-shadow: none;
  position: fixed;
  z-index: 5;
  top: 0px;
  left: 0px;
  width: 100%;
}

.navbar-header {
  width: 100%;
  padding: 7vh 4.5vw;

  .navbar-brand {
    padding: 0px;
    min-height: $navbar-item-min-height;
    height: $navbar-item-height;

    img {
      min-height: $navbar-item-min-height;
      height: $navbar-item-height;
    }
  }

  .navbar-toggle-wrapper {
    z-index: 12;
    position: relative;
    float: right;
    display: flex;
    align-items: center;
    min-height: $navbar-item-min-height;
    height: $navbar-item-height;

    .navbar-toggle {
      margin: 0px;
      border: 0px;
      padding: 12px 2px;

      @media(min-width: 768px) {
        display: inline-block !important;
      }

      .icon-bar {
        width: 32px;
        transition: all $navbar-animation-speed;
      }

      .icon-bar+.icon-bar {
        margin-top: 8px;
      }
    }

    .navbar-toggle.active {
      .icon-bar:first-child {
        transform: rotate(45deg) translate(3px, 3px);
      }

      .icon-bar:last-child {
        transform: rotate(-45deg) translate(4px, -4px);
      }
    }

    .navbar-toggle:hover, .navbar-toggle:focus {
      background-color: transparent;
    }
  }
}

.full-screen-nav-wrapper {
  position: fixed;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  transition: all $navbar-animation-speed;

  .nav-links {
    list-style-type: none;
    padding: 0px;
    margin: 0px;
  }

  .nav-links-center {
    text-align: center;
    z-index: 12;

    .nav-link-image-wrapper {
      position: absolute;
      z-index: -1;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background-size: cover;
      background-repeat: no-repeat;
      transition: all $navbar-animation-speed;
      opacity: 0;

      img {
        display: none;
      }
    }

    .nav-link-image-wrapper.nav-list-image-wrapper {
      background: white;
      z-index: -3;
    }

    >li {
      a {
        text-transform: lowercase;
        font-family: UntitledSansBlack, sans-serif;
        font-size: 40px;
        line-height: 40px;
        font-weight: bold;
        color: $color-asili-dark;
        transition: all $navbar-animation-speed;

        @media(min-width: 768px) {
          font-size: 6.25vw;
          line-height: 6.25vw;
        }
      }

      a:hover, a:focus {
        text-decoration: none;
      }
    }

    >li:hover {
      a {
        color: $color-asili-light;
      }

      .nav-link-image-wrapper {
        opacity: 1;
      }
    }

    >li.active {
      .nav-link-image-wrapper {
        z-index: -2;
        opacity: 1;
      }
    }
  }

  .nav-links-center:hover {
    .nav-link-image-wrapper.nav-list-image-wrapper {
      opacity: 1;
    }
  }

  .nav-links-bottom {
    /* TODO Remove display:none */
    display: none;
    position: absolute;
    width: 100%;
    bottom: 0px;
    left: 0px;
  }
}

.full-screen-nav-wrapper.hidden {
  display: flex !important;
  opacity: 0;
  visibility: hidden;
}

// #################
// Font & Typography
// #################

html, body, h1, h2, h3, h4, h5, h6, p {
  font-family: Proxima-Nova, sans-serif;
}

.font-weight-normal {
  font-weight: normal !important;
}

.left-align {
  text-align: left;
}

.right-align {
  text-align: right;
}

ul.accented-list {
  list-style-type: none;
  padding-left: 0px;
  
  li {
    position: relative;
    padding-left: 30px;
    
    p{
      font-weight: normal !important;
    }

    b {
      text-transform: lowercase;
    }
  }

  li:before{ 
    content: '\00b7'; 
    display: inline-block;
    font-size: 80px;
    line-height: 0px;
    position: absolute;
    left: 0px;
    top: 3px;
  }
}

// #####################
// Products, collections
// #####################

.collection-wrapper {
  margin: 0px 4.5%;
}

.product-wrapper {
  margin: 0px 4.5% 60px 4.5%;
}

.product-price {
  color: $color-asili-dark;
  font-weight: bold;
  font-size: 20px;
}

.product-image-wrapper {
  overflow: hidden;
}

.product-image {
  transition: all $general-animation-speed !important;
}

.product-thumbnail {
  display: block;
}

.product-images-container {
  display: flex;
  flex-direction: column;

  @media(min-width: 768px) {
    flex-direction: row-reverse;
  }

  .product-images-wrapper {
    width: 100%;

    @media(min-width: 768px) {
      width: 75%;
    }
  }

  .product-image-selector {
    width: 100%;
    padding: 5vw;

    @media(min-width: 768px) {
      width: 25%;
      flex-direction: column;
      padding: 0px 5vw 0px 0px;
      justify-content: center;
    }

    .product-thumbnail + .product-thumbnail {
      margin-left: 5vw;

      @media(min-width: 768px) {
        margin-left: 0px;
        margin-top: 5vw;
      }
    }
  }
}

.product-image-selector {
  display: flex;
  flex-direction: row;

  .product-thumbnail {
    width: 100%;
  }
}

.product-images-wrapper {
  position: relative;

  .product-image {
    position: relative;
    z-index: 2;
  }

  .product-image:nth-of-type(n+2) {
    display: none;
    position: absolute;
    z-index: 1;
    top: 0px;
    right: 0px;
    width: 100%;
  }

  .product-image.active {
    display: block;
  }

  .product-image.inactive {
    opacity: 0 !important;
    visibility: hidden;
  }
}

.product-details {
  font-weight: 600;

  h1 {
    margin-bottom: 25px;
  }

  @media(min-width: 1200px) {
    max-width: 25vw;
  }
}

.product-grid-wrapper {
  padding: 0px 7.5%;

  .product-grid {
    display: block;
    text-align: center;
    margin-bottom: 15vh;
  }

  .product-grid:hover, .product-grid:focus {
    text-decoration: none;

    .product-image {
      transform: scale(1.1);
    }
  }

  .product-grid:focus {
    outline: none;
  }
}

.back-to-collection {
  margin-top: 40px;

  a {
    text-transform: lowercase;
    color: $color-asili-dark;
  }

  a:hover, a:focus {
    text-decoration: none;
  }
}

// ##############
// Materials page
// ##############

section.asili-materials {
  position: relative;
  z-index: 1;
  margin-top: 50vw;
  
  .section-number {
    position: absolute;
    top: 20px;
    margin: 0px;
    font-size: 72px;
    font-weight: bold;
    font-family: UntitledSansBlack, sans-serif;
  }
  
  .section-number-right {
    right: 5%;
  }
  
  .section-number-left {
    left: 5%;
  }
  
  .section-image {
    position: absolute;
    z-index: -1;
  }
  
  .captioned-image-wrapper {
    padding: 0px 5%;
    margin-bottom: 30px;
    
    p {
      font-weight: bold;
      font-size: 16px;
      padding-top: 5px;
    }
    
    img {
      display: block;
      width: 100%;
    }
  }
}

section.asili-materials-stone {
  .section-image {
    width: 60vw;
    left: -10vw;
    top: -25vw;
  }
}

section.asili-materials-horn {
  background-color: #2A2D48;
  color: $color-asili-light;
  padding-top: 60vw;
  padding-bottom: 50px;
  
  .section-number {
    top: calc(60vw + 20px);
  }
  
  .content-wrapper {
    color: $color-asili-light !important;
    
    h1 {
      text-align: right;
      color: #2A2D48;
    }
  }
  
  .section-image {
    position: absolute;
    right: 0px;
    width: 50vw;
    top: 15vw;
  }
}

section.asili-materials-wood {
  background-color: $color-asili-light;
  color: #41394D;
  margin-top: 0px;
  padding: 50px 0px;
  
  .section-number {
    top: 70px;
  }
}

// ####
// Blog
// ####

.blog-wrapper {
  margin: 0px 4.5%;
  padding: 30px 0px;

  .blog-section {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column-reverse;

    @media(min-width: 768px) {
      flex-direction: row;
      margin-top: -30px;
    }

    .blog-preview, .blog-image {
      padding: 0px 5%;

      @media(min-width: 768px) {
        width: 50%;
      }
    }

    .blog-image {

      img {
        width: 100%;
      }
    }

    .blog-preview {
      a:hover, a:focus {
        text-decoration: none;
      }

      p {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 100px;
      }

      .blog-title {
        font-weight: bold;
        color: $color-asili-dark;
        font-size: 40px;
        margin: 20px 0px;
        @media(min-width: 768px) {
          margin-bottom: 60px;
        }
      }
    }
  }

  .blog-section:nth-child(even) {
    @media(min-width: 768px) {
      flex-direction: row-reverse;
    }
  }
}

// #############
// Grid & layout
// #############

#content {
  overflow: hidden;
}

body {
  .asili-grid-content .content-wrapper {
    color: $color-asili-dark;
  }

  .navbar-default .navbar-toggle .icon-bar {
    background-color: $color-asili-dark;
  }
}

body.dark {
  .asili-grid-content .content-wrapper {
    color: $color-asili-light;
  }

  .navbar-default .navbar-toggle .icon-bar {
    background-color: $color-asili-light;
  }
}

body.nav-open {
  .brand-wrapper {
    opacity: 0;
  }

  .navbar-default .navbar-toggle .icon-bar {
    background-color: $color-asili-dark;
  }
}

section.nav-padded {
  margin-top: calc(14vh + 40px);

  @media(min-width: 768px) {
    margin-top: calc(14vh + 3.5vw);
  }
}

section.full-width {
  width: 100%;
}

section.full-height {
  min-height: 100vh;
}

section.full-width.full-height {
  position: relative;
}

.row-flex {
  display: flex;
  width: calc(100% + 30px);

  .col-flex {
    float: none;
  }
}

.row-flex-md {
  flex-direction: column;

  @media(min-width: 768px) {
    flex-direction: row;
  }
}

.row-flex-lg {
  flex-direction: column;

  @media(min-width: 1200px) {
    flex-direction: row;
  }
}

.valign-wrapper {
  display: flex;
  align-items: center;

  >* {
    width: 100%;
  }
}

.fades-in {
  opacity: 0;
  transition: opacity $general-animation-speed;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 50%;

  img {
    display: none;
  }
}

.square:before {
  content: '';
  display: block;
  padding-top: 100%;
}

.brand-wrapper {
  position: absolute;
  z-index: 1;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all $navbar-animation-speed;

  .brand-content {
    width: 250px;
    text-align: center;

    @media(min-width: 768px) {
      width: auto;
      display: flex;
      align-items: center;
      justify-content: space-around;
    }

    img {
      width: 100%;
      padding: 20px 50px;
      @media(min-width: 768px) {
        width: 15vw;
        padding: 0px 20px;
      }
    }

    .brand-text {
      color: $color-asili-light;
      font-weight: bold;
      font-size: 16px;
      margin: 0px 20px;
      @media(min-width: 768px) {
        padding-top: 10px;
        font-size: 1.8vw;
        line-height: 110%;
      }
    }
  }
}

.video-wrapper {
  overflow: hidden;

  video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
  }
}

.video-wrapper.full-width {
  width: 100%;
}

.video-wrapper.full-height {
  height: 100vh;
}

.asili-grid-wrapper {
  @media(min-width: 768px) {
    display: flex;
  }

  .asili-grid-half {
    width: 100%;
    min-height: 50vh;

    @media(min-width: 768px) {
      width: 50%;
      min-height: 100vh;
    }
  }
  
  .asili-grid-half.asili-grid-spacer {
    min-height: 0px;
  }

  .asili-grid-image-background {
    background-size: cover;
    background-repeat: no-repeat;

    img {
      display: none;
    }
  }

  .asili-grid-content {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px 5%;

    h1, h2, h3, h4, h5, h6 {
      text-transform: lowercase;
      font-weight: bold;
      margin: 0px;
      margin-bottom: 6vh;

      @media(min-width: 768px) {
        font-size: 2.6vw;
        line-height: 115%;
      }
    }

    p {
      font-weight: 600;
      font-size: 13px;

      @media(min-width: 768px) {
        max-width: 25vw;
      }
    }
  }

  .asili-grid-content:last-child {
    /* Right hand side of the page */

    @media(min-width: 768px) {
      padding: 0px;
      padding-left: 10vw;

      .content-wrapper {
        margin-top: 20vh;
        margin-bottom: 5vh;
        margin-right: 15vw;
      }
    }
  }
}

// #####
// FORMS
// #####

form {

  label {
    text-transform: uppercase;
    font-weight: 400;
    margin: 0px;
  }

  input, label, textarea {
    font-size: 13px;
  }

  .btn {
    text-transform: lowercase;
    font-weight: 600;
    border-radius: 0px;
    background-color: transparent;
    border-color: $color-asili-dark;
    color: $color-asili-dark;
  }

  .btn:hover, .btn:focus, .btn:active {
    background-color: $color-asili-dark;
    color: $color-asili-light;
  }

  .form-group.form-group-text {
    display: flex;
    align-items: center;
    border-bottom: 2px solid black;
    border-color: $color-asili-dark;

    label {
      color: $color-asili-dark-hover;
    }

    input, textarea {
      box-shadow: none;
      border: 0px;
      border-radius: 0px;
      padding: 7px 10px;
    }
  }

  .form-group.form-group-radio {

    label {
      color: $color-asili-dark-hover;
    }

    .radio-label {
      height: 34px;
      line-height: 34px;
      border-bottom: 2px solid black;
      border-color: $color-asili-dark;
    }

    .radio+.radio {
      margin-top: 0px;
    }

    .radio {
      position: relative;
      display: inline-block;
      height: 34px;
      margin: 0px;

      input[type="radio"] {
        margin: 0px;
        opacity: 0;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
      }

      label {
        margin-left: 10px;
        padding: 0px;
        height: 34px;
        line-height: 34px;
        transition: color 0.3s;
      }

      input[type="radio"]:checked+label { 
        color: $color-asili-dark;
      }
    }
  }
}

.form-add-to-cart {
  margin-top: 25px;
}
