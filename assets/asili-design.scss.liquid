// ##########
// Navigation
// ##########

nav.navbar-default {
  background-color: transparent;
  border: 0px;
  box-shadow: none;
  position: fixed;
  z-index: 5;
  top: 0px;
  left: 0px;
  width: 100%;
}

.navbar-header {
  width: 100%;
  padding: 7vh 4.5vw;

  .navbar-brand {
    padding: 0px;
    min-height: $navbar-item-min-height;
    height: $navbar-item-height;

    img {
      min-height: $navbar-item-min-height;
      height: $navbar-item-height;
    }

    img.logo-light {
      display: none;
    }
  }

  .navbar-toggle-wrapper {
    z-index: 12;
    position: relative;
    float: right;
    display: flex;
    align-items: center;
    min-height: $navbar-item-min-height;
    height: $navbar-item-height;

    .navbar-toggle {
      margin: 0px;
      border: 0px;
      padding: 12px 2px;

      @media(min-width: 768px) {
        display: inline-block !important;
      }

      .icon-bar {
        width: 32px;
        transition: all $navbar-animation-speed;
      }

      .icon-bar+.icon-bar {
        margin-top: 8px;
      }
    }

    .navbar-toggle.active {
      .icon-bar:first-child {
        transform: rotate(45deg) translate(3px, 3px);
      }

      .icon-bar:last-child {
        transform: rotate(-45deg) translate(4px, -4px);
      }
    }

    .navbar-toggle:hover, .navbar-toggle:focus {
      background-color: transparent;
    }
  }
}

.contact.dark {
  .navbar-header {
    .navbar-brand {
      img.logo-light {
        display: block;
      }

      img.logo-dark {
        display: none;
      }
    }
  }
}

.full-screen-nav-wrapper {
  position: fixed;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0px;
  right: 0px;
  bottom: 0px;
  left: 0px;
  transition: all $navbar-animation-speed;

  .nav-links {
    list-style-type: none;
    padding: 0px;
    margin: 0px;
  }

  .nav-links-center {
    text-align: center;
    z-index: 12;

    .nav-link-image-wrapper {
      position: absolute;
      z-index: -1;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background-size: cover;
      background-repeat: no-repeat;
      transition: all $navbar-animation-speed;
      opacity: 0;

      img {
        display: none;
      }
    }

    .nav-link-image-wrapper.nav-list-image-wrapper {
      background: white;
      z-index: -3;
    }

    >li {
      a {
        text-transform: lowercase;
        font-family: UntitledSansBlack, sans-serif;
        font-size: 45px;
        line-height: 55px;
        font-weight: bold;
        color: $color-asili-dark;
        transition: all $navbar-animation-speed;

        @media(min-width: 768px) {
          font-size: 6.25vw;
          line-height: 6.25vw;
        }
      }

      a:hover, a:focus {
        text-decoration: none;
      }
    }

    >li:hover {
      a {
        color: $color-asili-light;
      }

      .nav-link-image-wrapper {
        opacity: 1;
      }
    }

    >li.active {
      .nav-link-image-wrapper {
        z-index: -2;
        opacity: 1;
      }
    }
  }

  .nav-links-center:hover {
    .nav-link-image-wrapper.nav-list-image-wrapper {
      opacity: 1;
    }
  }

  .nav-links-bottom {
    position: absolute;
    z-index: 12;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    bottom: 0px;
    left: 0px;
    padding: 20px 5%;
    text-transform: lowercase;
    font-family: UntitledSansBlack, sans-serif;
    font-weight: bold;

    li {
      display: inline-block;

      a {
        display: inline-block;
        padding: 10px 10px;
        color: $color-asili-dark;
        transition: all $navbar-animation-speed;
      }

      a:first-child {
        margin-left: 0px;
      }

      a:last-child {
        margin-right: 0px;
      }

      a:hover, a:focus {
        color: $color-asili-light;
        text-decoration: none;
      }
    }

    li.contact {
      margin-right: 50px;

      a {
        font-size: 32px;
      }
    }
  }
}

.full-screen-nav-wrapper.hidden {
  display: flex !important;
  opacity: 0;
  visibility: hidden;
}

.nav-btns {
  >li {
    display: inline-block;
    margin-top: 15px;

    >a:hover, >a:focus {
      background-color: $color-asili-dark;
    }
  }

  li+li {
    margin-left: 15px;
  }
}

